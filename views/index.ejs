        <div id="popMovies">
            <h2>Popular Movies</h2>
            <ul>
                <% popularMovies.forEach(movie => { %>
                    <li><%= movie %></li>
                <% }) %>
            </ul>
        </div>
    </main>
    
    <footer>
        <h2>Footer</h2>
    </footer>
